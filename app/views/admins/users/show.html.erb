<h3>Details of User</h3>
<div class="row">
  <a href="javascript:history.back()" class="btn btn-primary">Back</a>
  <%= link_to 'Edit', edit_admins_user_path(@user) ,class: "btn btn-primary ml-auto"%>
</div>
<div class="row mx-auto">
  <div class="col-12 text-center">
    <%= image_tag @user.avatar.url, class: 'show-avatar' %>
    <h3><%= @user.full_name %></h3>
    <p>Email: <%= @user.email %> <br> Contact: <%= @user.contact_number %> <br> Description: <%= @user.description %> </p>
  </div>
</div>

