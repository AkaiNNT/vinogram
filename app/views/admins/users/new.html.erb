<div class="container-fluid">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 mx-auto">
      <div class="text-left">
        <h3>Create new user</h3>
        <%= simple_form_for @user, url: admins_users_path, method: :post do |f| %>
          <%= f.input :email, autofocus: true, label: false, placeholder: 'Email' %>
          <%= f.input :full_name, label: false, placeholder: 'Full name' %>
          <%= f.input :contact_number , label: false, placeholder: 'Contact number'%>
          <%= f.input :description , label: false, placeholder: 'Description'%>
          <%= f.input :password , label: false, placeholder: 'Password'%>
          <%= f.input :password_confirmation, label: false, placeholder: 'Password confirmation'%>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
