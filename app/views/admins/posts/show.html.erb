<h3>Details of Post</h3>
<div>
  <a href="javascript:history.back()" class="btn btn-primary">Back</a>
</div>
<div class="row mx-auto">
  <div class="col-12">
    <%if @post.pictures.present? %>
      <div id="carousel_<%=@post.id%>" class="carousel slide" data-ride="carousel">
        <div class="row">
          <div class="carousel-inner w-50 mx-auto">
            <% @post.pictures.each_with_index do |pic, index| %>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <%= image_tag(pic.image.url, :class => "d-block w-100 ")%>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= image_tag(pic.image.url, :class => "d-block w-100")%>
                </div>
              <% end %>
            <% end %>
            <% if @post.pictures.count >= 2 %>
              <a class="carousel-control-prev" href="#carousel_<%=@post.id%>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel_<%=@post.id%>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            <% end %>
          </div>
        </div>
        <% else %>
        <div class="row">
          <div class="w-50 mx-auto">
            <%= video_tag @post.attachment.url(:medium), controls: true,type: 'video/mp4', style: "max-width: 100%;" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="row w-100">
        <div class="text-center mx-auto">
          Id: <%= @post.id %><br>
          User name: <%= @post.user.full_name %><br>
          User id : <%= @post.user_id %><br>
          Content : <% if @post.content.to_s != "" %>
                      <%= @post.content %>
                    <% else %>
                      Không có nội dung
                    <% end %><br>
          Created at : <%= @post.created_at %> ( <%= time_ago_in_words(@post.created_at) %> ago )
        </div>
      </div>
  </div>
</div>
