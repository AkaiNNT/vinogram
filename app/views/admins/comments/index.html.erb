<h3>List of Comment</h3>
<div class="row">
  <div class="mr-auto">
    <a href="javascript:history.back()" class="btn btn-primary">Back</a>
  </div>
  <div class="ml-auto">
    <%= link_to 'Create comment', new_admins_comment_path, class: 'btn btn-primary' %>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Content</th>
        <th scope="col">User / Id</th>
        <th scope="col">Post Id</th>
        <th scope="col">Created At</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% if @comments.count > 0 %>
        <% @comments.each do |c| %>
          <tr>
            <th scope="row"><%= c.id %></th>
            <td><%= c.content %></td>
            <td><%= c.user.full_name %> / <%= c.user_id %></td>
            <td><%= c.post_id %></td>
            <td><%= c.created_at %> ( <%= time_ago_in_words(c.created_at) %> ago )</td>
            <td><%= link_to 'Show', admins_comment_path(c), method: :get %> | <%= link_to 'Edit', edit_admins_comment_path(c) %> | <%= link_to 'Delete', admins_comment_path(c),method: :delete %> </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6">Not found .</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


