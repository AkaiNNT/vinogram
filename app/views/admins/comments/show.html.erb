<h3>Details of User</h3>
<div class="row">
  <a href="javascript:history.back()" class="btn btn-primary">Back</a>
  <%= link_to 'Edit', edit_admins_comment_path(@comment) ,class: "btn btn-primary ml-auto"%>
</div>
<div class="row mx-auto">
  <div class="col-12 text-center">
    Id:<%= @comment.id %><br>
    Content:<%= @comment.content %><br>
    User / User Id: <%= @comment.user.full_name %>  / <%= @comment.user_id %><br>
    Post Id: <%= @comment.post_id %><br>
    Created at: <%= @comment.created_at %> ( <%= time_ago_in_words(@comment.created_at) %> )
  </div>
</div>

