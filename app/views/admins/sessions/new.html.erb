<div class="form-devise">
  <div class="article container-fluid">
    <div class="row">
      <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="form-wrapper">
          <div class="big-screen-form">
            <div class="d-flex justify-content-center align-items-center">
              <%= image_tag 'logo.png', class: 'logo-form'%>
              <h2 class="text-uppercase font-weight-bold title-form">Vinogram</h2>
            </div>
            <p class="text-center">Admin CMS</p>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, label: false, placeholder: 'Email người dùng' %>
                  <%= f.input :password, required: false, label: false, placeholder: 'Mật khẩu' %>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                  <div class="form-actions">
                    <%= f.button :submit, "Đăng nhập", class: 'btn btn-primary btn-devise' %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
</div>
