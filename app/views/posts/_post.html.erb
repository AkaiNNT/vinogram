<section>
	<div class="row">
		<div class="col-lg-8 offset-lg-2 col-10 offset-1 ">
			<div class="card">
				<div class="card-body form-show-post">
					<header class="row">
						<div class="col-sm-2 col-md-2 col-lg-1 col-2">
							<div class="thumbnail profile-post">
								<%= image_tag post.user.avatar.url, :alt => "rss feed", :class => "img-thumbnail img-fluid rounded-circle rounded "%>
							</div>
			      </div>
						<div class="col-sm-10 col-md-10 col-lg-11 col-10">
							<%= link_to post.user.full_name, user_path(post.user), :class => "name-user", :'data-toggle' => :tooltip, :title => post.created_at.strftime("At %r")%>
							<% if post.user == current_user %>
								<div class="nav-item dropdown float-right">
							    <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">...</a>
							    <div class="dropdown-menu">
							    	<%= link_to "Edit", edit_post_path(post), class: "dropdown-item", "data-toggle": "modal", "data-target": "#editPost_#{post.id}" %>
							    	<%= link_to "Delete", post_path(post), class: "dropdown-item",method: :delete, data: {confirm: "Are you sure?"}%>
							    </div>
							  </div>
							<% end %>
						</div>
					</header>
					<%= render 'show_img_video', post: post %>
					<section class="like_and_cmt">
						<br>
						<%= link_to "<i class='fa fa-heart-o fa-2x'></i>".html_safe, new_post_like_path(post)%>
						<%= link_to "<i class='fa fa-comment-o fa-2x icon-comment'></i>".html_safe%>
						<%= link_to "<i class='fa fa-bookmark-o fa-2x float-right'></i>".html_safe%>
					</section>
					<section class="count_like">
						<b><%= post.likes.count%>
							<% if post.likes.count >= 2%>
								likes
							<% else %>
								like
							<% end %>
						</b>
					</section>
					<section class="content_post">
						<p><b><%= post.user.full_name %></b> <%= post.content%></p>
					</section>
				</div>
			</div>
		</div>
	</div>
</section>
<br>

<%= render 'edit_modal_post', post: post%>

<script type="text/javascript">
	$('.carousel').carousel({
    interval: false
	}); 
	$(document).ready(function() {
    $("#link-edit").
      data("association-insertion-method", 'append').
      data("association-insertion-node", '#edit-cocoon');
  });
</script>