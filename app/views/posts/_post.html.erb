<section>
	<div class="row">
		<div class="col-lg-8 offset-lg-2 col-10 offset-1 ">
			<div class="card">
				<div class="card-body form-show-post">
					<header class="row">
						<div class="col-sm-2 col-md-2 col-lg-1 col-2">
							<div class="thumbnail profile-post">
								<%= image_tag post.user.avatar.url, :alt => "rss feed", :class => "img-thumbnail img-fluid rounded-circle rounded "%>
							</div>
			      </div>
						<div class="col-sm-10 col-md-10 col-lg-11 col-10">
							<%= link_to post.user.full_name, user_path(post.user), :class => "name-user", :'data-toggle' => :tooltip, :title => post.created_at.strftime("At %r")%>
							<div class="nav-item dropdown float-right">
						    <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">...</a>
						    <div class="dropdown-menu">
						    	<%= link_to "Edit", edit_post_path(post), class: "dropdown-item" %>
						    	<%= link_to "Delete", post_path(post), class: "dropdown-item",method: :delete, data: {confirm: "Are you sure?"}%>
						    </div>
						  </div>
						</div>
					</header>
					<div class="row">
						<%if post.pictures.present? %>
							<div id="carousel_<%=post.id%>" class="carousel slide" data-ride="carousel">
							  <div class="carousel-inner">
									<% post.pictures.each_with_index do |pic, index| %>
								  	<% if index == 0 %>
									    <div class="carousel-item active">
									      <%= image_tag(pic.image.url, :class => "d-block w-100")%>
									    </div>
									  <% else %>
									    <div class="carousel-item">
										    <%= image_tag(pic.image.url, :class => "d-block w-100")%>
									    </div>
									  <% end %>
									<% end %>
							  </div>
							  <a class="carousel-control-prev" href="#carousel_<%=post.id%>" role="button" data-slide="prev">
							    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
							    <span class="sr-only">Previous</span>
							  </a>
							  <a class="carousel-control-next" href="#carousel_<%=post.id%>" role="button" data-slide="next">
							    <span class="carousel-control-next-icon" aria-hidden="true"></span>
							    <span class="sr-only">Next</span>
							  </a>
							</div>
						<% else %>
							<%= video_tag post.attachment.url(:medium), controls: true,type: 'video/mp4', style: "max-width: 100%;" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<br>
<script type="text/javascript">
	$('.carousel').carousel({
    interval: false
	}); 
</script>