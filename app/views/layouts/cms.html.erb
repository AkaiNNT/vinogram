<!DOCTYPE html>
<html>
  <head>
    <title>Vinogram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag 'logo.png' %>
    <%= stylesheet_link_tag    'cms', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'cms', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= render 'layouts/navbar_dashboards' %>
    <div class="container-fluid h-100">
      <div class="row h-100">
        <aside class="col-12 col-md-3 col-lg-2 p-0 bg-dark">
          <%= render 'layouts/sidebar' %>
        </aside>
        <div class="col-12 col-md-9 col-lg-10 main-cms">
          <div class="col bg-faded py-3 h-100">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <% if controller_name != 'sessions'%>
      <%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
