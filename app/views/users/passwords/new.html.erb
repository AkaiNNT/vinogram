<div class="form-devise">
  <div class="jumbotron">
    <div class="row">
      <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="big-screen">
          <div class="d-flex justify-content-center align-items-center">
              <%= image_tag 'logo.png', class: 'logo-form'%>
              <h2 class="text-uppercase font-weight-bold title-form">Vinogram</h2>
          </div>
          <br>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true %>
              </div>
              <div class="d-flex justify-content-end align-items-center">
                <div class="form-actions">
                  <%= f.button :submit, "Reset password" , class: 'btn btn-primary btn-devise'%>
                </div>
              </div>
            <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
