<div class="form-devise">
  <div class="article container-fluid">
    <div class="row">
      <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="form-wrapper">
          <div class="big-screen-form">
            <div class="d-flex justify-content-center align-items-center">
              <%= image_tag 'logo.png', class: 'logo-form'%>
              <h2 class="text-uppercase font-weight-bold title-form">Vinogram</h2>
            </div>
            <br>
            <button type="button" class="form-control btn-facebook">Đăng ký với Facebook</button>
            <hr>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email người dùng' %>
                <%= f.input :full_name, required: true, label: false, placeholder: 'Tên đầy đủ' %>
                <%= f.input :password, required: true, label: false, placeholder: 'Mật khẩu' %>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Xác nhận mật khẩu' %>
              </div>
              <div class="d-flex justify-content-center align-items-center">
                <div class="form-actions">
                  <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-devise' %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="big-screen-signup-link text-center">
            <span>Bạn không có tài khoản? </span><%= link_to "Đăng nhập", new_session_path(resource_name) %><br />
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
</div>
