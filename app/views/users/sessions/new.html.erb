<div class="form-sign-in">
  <div class="jumbotron">
    <div class="row">
      <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="big-screen">
          <div class="d-flex justify-content-center align-items-center">
              <%= image_tag 'logo.png', class: 'logo-form'%>
              <h2 class="text-uppercase font-weight-bold title-form">Vinogram</h2>
          </div>
          <br>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
            <div class="d-flex justify-content-end align-items-center">
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: 'btn btn-primary btn-login' %>
              </div>
            </div>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
