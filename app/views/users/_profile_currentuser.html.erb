  <section class="header">
    <%= simple_form_for @user, url: user_path, method: :put, html: {multipart: true} do |f|%>
    <div class="row">
      <div class="col-10 offset-1 col-md-6 offset-md-0 col-lg-4 offset-lg-1 offset-xl-2">
        <div class="avatar_img mr-md-2 ml-lg-2">
          <%= image_tag (@user.avatar.url),id: 'blah'%>
          <%= f.file_field :avatar, value: 'Edit avatar', id: 'edit_avatar', onchange: "readURL(this);"%>
       </div>
     </div>

     <div class="col-10 offset-1 col-md-6 offset-md-0 col-lg-6">
      <div class="d-flex flex-column flex-md-row justify-content-md-start">
        <div class="mr-md-2">
          <h4 class="name_field"><%= @user.full_name%></h4>
        </div>
        <% if @user == current_user %> 
          <div class="mr-md-2">
            <div class="edit_profile_link">
              <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'button'%>
            </div>
          </div>  
          <div class="d-flex mt-1 justify-content-center">
            <div class="dropdown">
              <i class="fa fa-cog fa-lg icon-cog " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
              <div class="dropdown-menu" >
                <a class="dropdown-item" href="<%=edit_user_path(current_user)%>"><i class="fa fa-edit"></i> Edit Profile</a>
                <a class="dropdown-item" href="<%=edit_user_registration_path(current_user)%>"><i class="fa fa-unlock-alt"></i> Change Password</a>
                <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method= "delete"><i class="fa fa-sign-out"></i> Log Out</a>
              </div>
            </div>
          </div>
        <% end %>
     </div>
     <div class="info d-flex flex-column flex-md-row justify-content-md-start">
         <div class="mx-auto mx-md-0 mr-md-2"><strong><%=@user.posts.count%></strong> posts</div>
         <div class="mx-auto mr-md-2"><strong><%= @user.followers.count %></strong> follower</div>
         <div class="mx-auto"><strong><%= @user.followings.count %></strong> following</div>
     </div>
     <div class="d-flex flex-row ">
      <span class="info_description">
       <strong><%= @user.email%></strong>
       <%if @user.description%> 
       : <%= @user.description%>
       <%end%>
     </span>
     </div>
   </div>
 </div>
 <%end%>
</section>