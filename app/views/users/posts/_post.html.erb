<div class="col-md-4">
    <% if post.attachment.present? %>
    	<%= link_to image_tag(post.attachment.url(:thumb), class: 'post_img'), post_path(post) %>
      <%= link_to '<i class="fa fa-video-camera fa-2x video-camera-color"></i>'.html_safe, post_path(post) %>

    <% else %>
    	<%= link_to image_tag(post.pictures.first.image.url(:thumb) ,class: 'post_img'), post_path(post)%>
    <% end %>
</div>