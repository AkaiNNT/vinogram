<div class="col-md-4">
    <% if post.attachment.present? %>
    	<%= link_to image_tag(post.attachment.url(:thumb), class: 'post_img'), post_path(post,page_user: true) %>
      <%= link_to '<i class="fa fa-video-camera fa-2x video-camera-color"></i>'.html_safe, post_path(post,page_user: true) %>

    <% else %>
    	<%= link_to image_tag(post.pictures.first.image.url(:thumb) ,class: 'post_img'), post_path(post,page_user: true)%>
    	<% if post.pictures.count >= 2 %>
      <%= link_to ('<i class="fa fa-image fa-2x video-camera-color"><span> ' + post.pictures.count.to_s + ' images</span></i>').html_safe, post_path(post,page_user: true) %>
    	<% end%>
    <% end %>
</div>

