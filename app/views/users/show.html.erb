<div class="show_profile">
  <%if @user == current_user%>
  <%= render 'profile_currentuser'%>
  <%else%>
  <%= render 'profile_otheruser'%>
  <%end%>
  <section class="user_post">
    <hr>
    <div class="title">
      <h7>SHOW ALL POSTS</h7>
    </div>
    <div class="posts row">
      <div class="col-md-4">
        <button type="button" class="modal_btn" data-toggle="modal" data-target="#exampleModal">
          <%= image_tag 'default_images.jpeg', class: 'post_img'%>
        </button>
        <!-- start modal-->
        <%= render 'modal_show' %>
        <!-- end modal -->
      </div>
      <div class="col-md-4"><%= image_tag 'default_images.jpeg', class: 'post_img'%></div>
      <div class="col-md-4"><%= image_tag 'default_images.jpeg', class: 'post_img'%></div>
    </div>


  </section>

</div>

<script type="text/javascript">
  $( "#blah" ).click(function() {
    $( "#edit_avatar" ).click();
  });
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#blah')
        .attr('src', e.target.result)
        .width(150)
        .height(150);
      };

      reader.readAsDataURL(input.files[0]);
    }
  }
</script>